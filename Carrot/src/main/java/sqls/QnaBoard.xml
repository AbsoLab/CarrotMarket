<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="QnaBoard">

<select id="qnaList" resultType="mul.camp.a.dto.BoardDto">
	SELECT BID, NAME
	FROM BOARD
	WHERE BID > 6
</select>

<select id="qnaCont" parameterType="Integer" resultType="mul.camp.a.dto.ContentDto">
	SELECT CID, TITLE, CONTENT, UID, BID
	FROM CONTENT
	<if test = "bid == 0">
		WHERE BID > 1
	</if>
	
	<if test = "bid > 0">
		WHERE BID = #{BID}
	</if>
</select>

<select id="qnaSel" parameterType="Integer" resultType="mul.camp.a.dto.ContentDto">
	SELECT TITLE, CONTENT
	FROM CONTENT
	WHERE BID = #{BID}
</select>

</mapper>